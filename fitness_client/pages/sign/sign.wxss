/* pages/sign/sign.wxss */
.main{
  padding: 15rpx;
  height: 100%;
  background-color: #F8F8F8;
}

.title{
  height: 100rpx;
  background-color: #fff;
  font-size: 25rpx;
  color:red;
  border-radius:3%;
  padding-left: 15rpx;
}

.ar_line{
    width:100%;
    height:1rpx;
    content: '';
    background: #ddd;
    margin:20rpx 0rpx;
}


.contant{
  width: 100%;
  margin: 0 auto;
  background-color: #fff;
}
.contant-img{
  border: 1px solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
}
.text{
  font-size: 26rpx;
  padding: 10px 0;  
}
.upload-button{
  background: #0092f9;
  font-size: 28rpx;
  color: #fff;
  border-radius: 0!important;
  margin-top: 10px;
  height: 75rpx;
  line-height: 75rpx;
  width: 30%;
}
.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  left:0;
}
.footer-button{
  display: flex; 
}
.Button{
  width: 50%;
  font-size: 28rpx;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0!important;
}
.Button:first-child{
  background: #ccc;
}
.Button:last-child{
  background: #f71c38;
}
button::after{
  border: 0!important;
}
