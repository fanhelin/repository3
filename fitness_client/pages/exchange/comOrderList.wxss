page{
  width: 100%;
  overflow:auto !important;
  background-color: #efefef;
}
.container{
  width: 100%;
  height: 100%;
  padding: 0px !important;
 

  color: #5a5a58;
}
.container-body{
  width: 100%;
}
.tab{
	display: flex;
	flex-direction: column;
	height: 100%;
   overflow:auto !important;
}
.tab-nav{
  width: 100%;
	height: 80rpx;
  background-color: #fff;
	border-bottom: 1rpx solid #ddd;
	display: flex;
	line-height: 79rpx;
	position: relative;
  overflow-x:scroll !important;
}
.tab-nav text{
	display: block;
	flex: 1;
	text-align: center;
	width: 25%;
  font-size: 12px;
  color: #6b6b6b;
}
.tab-nav text.active{
	color: #dd191d;
  border-bottom:1px solid red;

}
.tab-line{
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #dd191d;
	transition: all 0.3s;
}
.tab-content{
  width: 100%;
	height: 100%;
	display: flex;
}
.tab-content .tab-panel{
	height: 100%;
	overflow-y: auto;
	overflow-x: hidden;
	flex: 1;
	/* flex: 0 0 20%; */
}
.test-list{
   width: 100%;
   margin-top: 10px;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  background-color: #fff;

}
.question-list{
	padding: 20rpx;
}
.test-item{
  width: 100%;
  display: flex;
  background-color: #fff;
	border-bottom: 1rpx solid #ddd;
	padding: 20rpx 0;
 
}
.test-item image{
  width: 100%;
  height: 150px;
}
.test-item-t{
  width: 100%;
  display: flex;
  flex-direction: row;
	font-size: 34rpx;
 
}
.test-item:nth-child(odd){
  margin-left: 2.5%;
}
.test-item:nth-child(even){
  margin-left: 2.5%;
}
.test-item-b{
display: flex;
	font-size: 30rpx;
	color: #888;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	overflow: hidden;
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
  line-height:30px;

}

.red{
  color: #f71c38;

}


.goods-detail{
  width: 100%;
  display: flex;
  flex-direction: row;
  
}
.test-item-b:nth-child(odd){
  width:20%;
}
.test-item-b:nth-child(even){
  width: 75%;

}
.flex-item{
  display: flex;
  
 

}
.flex-item:nth-child(odd){
  width: 70%;
  color: #f71c38;
}
.flex-item:nth-child(even){
 
  width: 30%;
  justify-content: center;
  padding: 5rpx 0rpx 5rpx 0rpx;
  background-color: #f71c38;
   font-size: 12px;
  color: #fff;
}
.text-item-title{
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  border-bottom:1rpx solid #ddd;
  background-color: #fff;
   color: #444444;
  font-size: 12px;
}
.text-item-title-item{
  display: flex;
  flex:  0 0 33.33%;
 justify-content: center;
 align-items: center;
}

.nav_section{
    width:100%;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:20rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:170rpx;
    height:158rpx;
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:360rpx;
    font-size:26rpx;
    color:#a9a9a9;
    
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_sub{
    font-size: 30rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_section_items .section_cont .section_cont_price{
    font-size:32rpx;
    color:#d24a58;
}
.nav_section_items .section_book{
    width:110rpx;
    height:60rpx;
    font-size:30rpx;
    border-radius:10%;
    background:#FF0a58;
    line-height: 60rpx;
    color:#fff;
    text-align: center;
    margin-top:35rpx;
}

.nav_section_items .section_book_s{
    width:150rpx;
    height:60rpx;
    font-size:30rpx;
    border-radius:10%;
    background:#FF0a58;
    line-height: 60rpx;
    color:#fff;
    text-align: center;
    margin-top:35rpx;
}
