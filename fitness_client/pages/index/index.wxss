/*header*/
.flex{
  display: flex;
}
.header{
    height: 400rpx;
    background-color: #2cc17B;
    position:fixed;
}
.header image{
    position: absolute;
    left:50%;
    top:50%;
    margin:-80rpx 0 0 -80rpx;
    width:160rpx;
    height: 160rpx;
    border-radius:50%;
}
.styState{
    width:750rpx;
    position: absolute;
    bottom:20rpx;
    justify-content: space-around;
}
.styState view{
    width:320rpx;
    font-size: 20rpx;
    color: #FFF;
}
.styState text{
    font-size: 1em;
    display: block;
    text-align: center;
}
#bg-font{
    display: inline-block;
    font-size: 2em;
}
.styState view:nth-child(2){
    width:5rpx;
    background-color: rgba(255,255,255,0.4);
}

.styState view:nth-child(4){
    width:5rpx;
    background-color: rgba(255,255,255,0.4);
}
.styState view:nth-child(6){
