/* pages/mall/mall.wxss */
@import "/wxSearch/wxSearch.wxss";

.listMall{
  display:-webkit-flex;
	display:flex;
	width:100%;
  flex-wrap:wrap; 
}

.listMall .img{
  text-align:center;
}

.listMall view image{
    width: 230rpx;
    height: 230rpx;
}
.listMall .name{
  font-size: 25rpx;
  height: 44px;
  color: #9A9A9A;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  line-height: 22px;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.listMall .now_price{
  color:#F98809;
  font-size: 30rpx;
}

.pageContainer{
  font-size: 14rpx;
  color: #000;
}

/*head   search*/
.pageContainer .search{
  width: 737rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #4bbc93;
  position: fixed;
}
.pageContainer .search-left{
  flex: 15;
  background: #52CC9F;
  text-align: left;
}
.pageContainer .search-left input{
  display: inline-block;
  height: 65rpx;
  color:#FFF;
  font-size: 26rpx;
}
.search-placeholder{
  color: #FFF;
  line-height: 26rpx;
  padding-top: 5rpx;
}
.pageContainer .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.pageContainer .search .search-right{
  flex: 2;
  margin-left:20rpx;
}
.pageContainer .search .search-right image{
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}

.flex{
  display: flex;
}
.flex-wrap{
  flex-wrap: wrap;
}
.flex-col{
  flex-direction: column;
}

/*courseGrp*/
.course-grp {
  flex-wrap:wrap;
  justify-content: space-around;
  position: fixed;
  top:80rpx;
}
.course-grp-name{
  width: 100%;
  height: 70rpx;
  justify-content:space-between;
  align-items:center;
  background-color: rgba(217, 217, 217, 0.2)
}
.course-grp-name text{
  font-size: 36rpx;
  line-height: 50rpx;
  color: #000 ;
  padding-left: 30rpx;
}
.course-grp-name navigator{
  font-size: 36rpx;
  color: rgba(217, 217, 217, 0.8);
  padding-right: 20rpx;
}

.course-grp-item{
    padding: 30rpx;
    display: flex;
    flex-flow: row wrap;
    align-content: space-around;
  
}

.course-grp-item navigator:nth-child(odd){
    float: left;
}

.course-grp-item navigator:nth-child(even){
    float: right;
}

.course-grp-item navigator{
  flex: 0 0 50%;
  margin-bottom: 20rpx;
}

.course-grp-item image{
  width: 340rpx;
  height: 240rpx;
}

.course-grp-item text{
  margin-left:20rpx;
  margin-top:20rpx;
  color:#000;
  font-size: 30rpx;
}
.course-grp-item wx-text:last-child{
  margin-top: 0;
  color:red;
  font-size: 24rpx;
}