/* pages/exchange/goodsDetail.wxss */
swiper{
    height: 420rpx;
}
swiper-item image{
  width:100%;
  height: 420rpx;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family:'微软雅黑';
} 
/* 滚动条 */
.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
}
/* 导航对应内容项 */
.nav_section{
    width:100%;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:20rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:170rpx;
    height:158rpx;
}
.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:360rpx;
    font-size:26rpx;
    color:#a9a9a9;
    
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_sub{
    font-size: 30rpx;
    line-height:60rpx;
    color:#000;
    margin-bottom:10rpx;
}
.nav_section_items .section_cont .section_cont_price{
    font-size:32rpx;
    color:#d24a58;
}
.nav_section_items .section_book{
    width:110rpx;
    height:60rpx;
    font-size:30rpx;
    border-radius:10%;
    background:#FF0a58;
    line-height: 60rpx;
    color:#fff;
    text-align: center;
    margin-top:35rpx;
}

.nav_section_items .section_clock{
    width:80rpx;
    height:80rpx;
    font-size:26rpx;
    line-height:80rpx;
    text-align: center;
    margin-top:35rpx;
}

.ar_cont{
    padding:0rpx 20rpx;
    font-size:30rpx;
    background: #fff;
    margin-bottom:20rpx;
    line-height: 40rpx;
    color:#666666;
}
.ar_cont .ar_cont_h1,
.ar_cont .ar_cont_price{
    font-size: 32rpx;
    font-weight: 600;
    line-height: 40rpx;
    color:#000;
}
.ar_cont .ar_cont_price{
    color: #e64340;
    margin-left:10rpx;
}
.ar_line{
    width:100%;
    height:1rpx;
    content: '';
    background: #ddd;
    margin:20rpx 0rpx;
}

.footer{
    background-color: #fff;
    border-top:1px solid #eee;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    padding: 10rpx 0 0 0;
}
.header{
  overflow: hidden;
  position: relative;
  background: #fff;
}
.header .address{
  padding:15px 0;
}
.header .user{
  padding:0 15px;
  font-size: 26rpx;
  color:#666;
}
.header .user:after{
  content: "";
  display: block;
  clear: both;
}
.header .user .nameLable{
  float:left;
  font-size: 26rpx;
}
.header .user .name{
  font-size: 26rpx;
}
.header .user .tel{
  font-size: 26rpx;
  float: right;
}
.header .ress{
  padding:10px 15px 0 15px;
  font-size:26rpx;
  color:#666;
}
.header .distribution{
  font-size:26rpx;
  background:#F0F0F0;
  padding:8px 15px;
  width:100%;
  color: #9e9e9e;
  margin-top:7px;
}
.xian{
  border-bottom:2px dashed #ff533b;
  position: absolute;
  width:100%;
  bottom: 0;
  left:0;
}
.xian2{
  background: #fff;
}
.toAddress{
    color: 9e9e9e;
    background: #fff;
    font-size: 18px;
    padding: 15px;
}
.box{
    margin-top:7px;
}
.box .title{
  font-size: 26rpx;
  color: #9e9e9e;
  padding:8px 15px;
  background:#fff;
  width:100%;
  display:block;
  border-bottom:1px solid #eee;
}

/***/
.list {
  background: #fff;
  margin-top:10px;
}
.list .item{
  padding:10px 15px;
  font-size: 14px;
  color:#333;
  position: relative;
  display: flex;
  flex-direction:row;
  border-bottom: 1px solid #f3f3f3;
}
.item::last-child{
  border:none;
}
.item radio{
  padding: 15rpx 25rpx 0 10rpx;
}
.item .right{
  flex: 1;
}
.item image {
  width:32rpx;
  height: 32rpx;
  display: inline-block;
  vertical-align:middle;
  margin:0 18rpx 0 9rpx;
}
.item .jump{
  position: absolute;
  right:20px;
  top:20px;
  color:#999;
}
.addto .jump{
  top:10px;
}
.item .h1,.list .item .p{
  display: block;
  color:#ccc;
  font-size: 12px;
}
.item .h1{
  margin-bottom:5px;
  color:#666;
  font-size: 14px;
}
